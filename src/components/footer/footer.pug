include ../logo/logo
include ../subscription-text-field/subscription-text-field
include ../social-icons/social-icons

-
  const sections = [
    {
      className: 'footer__second-section',
      title: 'Навигация',
      items: ['О нас', 'Новости', 'Служба поддержки', 'Услуги'],
      link: '/mock-address/change-me'
    },
    {
      className: 'footer__third-section',
      title: 'О нас',
      items: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы'],
      link: '/mock-address/change-me'
    },
    {
      className: 'footer__fourth-section',
      title: 'Служба поддержки',
      items: ['Соглашения', 'Сообщества', 'Связь с нами'],
      link: '/mock-address/change-me'
    },
  ];

mixin footer()
  footer.footer
    .footer__top-section-container
      .footer__top-section-wrapper
        .footer__first-section
          +logo({
            isColorful: true,
            href: 'landing-page.html',
          })
          .footer__first-section-text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        .footer__items-section
          each section in sections
            - const { className, title, items, link } = section;
            div(class=className)
              ul.footer__list
                li.footer__list-item
                  h3.footer__title=title
                each item in items
                  li.footer__list-item
                    a.footer__link(
                      href=link
                    )=item

        .footer__fifth-section
          h3.footer__subscription-title Подписка
          form.footer__subscription-form
            .footer__subscription-text Получайте специальные предложения и новости сервиса
            +subscription-text-field()
    .footer__bottom-section-wrapper
      .footer__copyright-text Copyright &#169; 2018 Toxin отель. Все права защищены.
      .footer__social-icons-container
        +social-icons({
          socials: ['twitter', 'facebook', 'instagram'],
        })