mixin advantage-item(options = {})
  .advantage-item(style=`border-bottom: ${options.border ? options.border : '1px solid rgba(31, 32, 65, 0.1)'}`)
    .advantage-item__icon
      img(src=require(`../../img/${options.image}`) alt="icon")
    .advantage-item__text
      .advantage-item__title!=options.title
      .advantage-item__description!=options.description