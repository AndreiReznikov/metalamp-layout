mixin social-icons()
  .social-icons
    a(class="social-icons__link" href="https://twitter.com/" target="_blank" rel="noopener noreferrer")
      img(class="social-icons__image" src=require("../../img/twitter.svg") alt="Twitter")
    a(class="social-icons__link" href="https://www.facebook.com/" target="_blank" rel="noopener noreferrer")
      img(class="social-icons__image" src=require("../../img/facebook.svg") alt="Facebook")
    a(class="social-icons__link" href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer")
      img(class="social-icons__image" src=require("../../img/instagram.svg") alt="Instagram")