mixin checkbox-button(options)
  -
    if (!options.title) options.title = '';
    if (!options.isRich) options.isRich = false;
    if (!options.richButtonTitle) options.richButtonTitle = '';
    if (!options.checked) options.checked = false;

  .checkbox-button-container
    if options.title 
      h3.checkbox-button__title!=options.title
    label.checkbox-button 
      if options.isRich
        span.checkbox-button__text-container
          span.checkbox-button__rich-button-title=options.richButtonTitle
          span.checkbox-button__text_normal-text=options.text
        input.checkbox-button__input(type="checkbox" checked=options.checked)
        span.checkbox-button__custom-input
      else 
        span.checkbox-button__text=options.text
        input.checkbox-button__input(type="checkbox" checked=options.checked)
        span.checkbox-button__custom-input