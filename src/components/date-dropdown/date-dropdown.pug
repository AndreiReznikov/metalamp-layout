mixin date-dropdown(options = {})
  .date-dropdown.js-date-dropdown
    input(
      type="text"
      class="datepicker-multi js-datepicker-multi"
      data-range="true"
      data-multiple-dates-separator=" - "
      data-position="bottom left"
      data-from=options.dateFrom
      data-to=options.dateTo
      )
    .date-dropdown__wrapper
      if options.title
        h3.date-dropdown__title!=options.title[0]
      .date-dropdown__from
        .date-dropdown__arrow
        input(
          class="date-dropdown__input-from js-date-dropdown__input-from"
          type="text"
          placeholder="дд.мм.гггг"
          data-from-empty=options.isFromEmpty
          )
    .date-dropdown__wrapper
      if options.title
        h3.date-dropdown__title!=options.title[1]
      .date-dropdown__to
        .date-dropdown__arrow
        input(
          class="date-dropdown__input-to js-date-dropdown__input-to"
          type="text"
          placeholder="дд.мм.гггг"
          data-to-empty=options.isToEmpty
          )