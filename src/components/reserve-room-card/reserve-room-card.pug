include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../button/button

mixin reserve-room-card(options = {})
  .reserve-room-card
    .reserve-room-card__wrapper
      form.reserve-room-card__form
        .reserve-room-card__number-and-price-container
          h1.reserve-room-card__number-symbol №
            span.reserve-room-card__room-number  888
            span.reserve-room-card__lux-mark
              +button({
                textButton: true,
                text: 'Люкс'
                })
          span.reserve-room-card__room-price 9 990
            span.reserve-room-card__room-price__currency &#8381;
            span.reserve-room-card__time-interval  в сутки
        .reserve-room-card__date-dropdown-container
          +date-dropdown({
            title: ['Прибытие', 'Выезд'],
            dateFrom: options.dateFrom,
            dateTo: options.dateTo
            })
        .reserve-room-card__guests-dropdown-container
          +dropdown({
            items: ['Взрослые', 'Дети', 'Младенцы'],
            addingButtons: true,
            isGuests: true,
            isClicked: true,
            title: 'Гости',
            buttonsNum: options.dropdownButtonsNum,
            clicksNum: options.dropdownClicksNum
            })
        .reserve-room-card__price-block
          .reserve-room-card__sum
            .reserve-room-card__sum-description
              span.reserve-room-card__sum-text 9 990&#8381; x 4 суток
            span.reserve-room-card__service-sum 39 960&#8381;
          .reserve-room-card__sum
            .reserve-room-card__sum-description
              span.reserve-room-card__sum-text Сбор за услуги: скидка 2 179&#8381;
              .reserve-room-card__information-icon-container
                .reserve-room-card__information-icon i
            span.reserve-room-card__service-sum 0&#8381;
          .reserve-room-card__sum
            .reserve-room-card__sum-description
              span.reserve-room-card__sum-text Сбор за дополнительные услуги
              .reserve-room-card__information-icon-container
                .reserve-room-card__information-icon i
            span.reserve-room-card__service-sum 300&#8381;
        .reserve-room-card__total-sum-block
          span.reserve-room-card__total-text Итого
          span.reserve-room-card__dotted-border
          span.reserve-room-card__total-sum 38 081&#8381;
        .reserve-room-card__button-container
          +button({
            longButton: true,
            text: 'Забронировать',
            type: 'submit'
            })