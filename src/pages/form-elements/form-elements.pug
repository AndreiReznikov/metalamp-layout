include ../../components/logo/logo
include ../../components/text-field/text-field
include ../../components/masked-text-field/masked-text-field
include ../../components/element-description/element-description
include ../../components/date-dropdown/date-dropdown
include ../../components/filter-date-dropdown/filter-date-dropdown
include ../../components/subscription-text-field/subscription-text-field
include ../../components/dropdown/dropdown
include ../../components/expandable-checkbox-list/expandable-checkbox-list
include ../../components/checkbox-button/checkbox-button
include ../../components/radio-buttons/radio-buttons
include ../../components/toggle-button/toggle-button
include ../../components/like-button/like-button
include ../../components/rate-button/rate-button
include ../../components/range-slider/range-slider
include ../../components/button/button
include ../../components/pagination/pagination
include ../../components/bullet-list/bullet-list
include ../../components/advantage/advantage
include ../../components/comment/comment
include ../../templates/vars-and-mixins

doctype html
html(lang="ru")
  +pageBase({
    title: 'Form Elements',
    keywords: 'Form Elements, components, MetaLamp, education',
    description: 'Компоненты формы для сайта Toxin',
  })
  body
    .form-elements-container
      .form-elements-logo-container
        +logo({
          href: 'index.html',
        })

      .form-elements-wrapper
        .form-elements-left-block
          each val in textFields
            div(class=val.class)
              +element-description({
                title: val.title,
                status: val.status,
              })
              +text-field({
                type: val.type,
                placeholder: val.placeholder,
                value: val.value,
                isFocused: val.isFocused,
              })

          .form-elements-dropdown-first-container
            +dropdown({
              items: ['Взрослые', 'Дети', 'Младенцы'],
              addingButtons: true,
              isGuests: true,
              title: 'Dropdown',
            })

          .form-elements-masked-text-field-container
            +masked-text-field({
              type: 'text',
              placeholder: 'ДД.ММ.ГГГГ',
              title: 'Masked text field',
            })

          .form-elements-date-dropdown-container
            +date-dropdown({
              title: ['Date dropdown', 'Date dropdown'],
              dateFrom: '2019, 7, 15',
              dateTo: '2019, 7, 19',
              isFromEmpty: 'true',
            })

          .form-elements-filter-date-dropdown-container
            +filter-date-dropdown({
              title: 'Filter date dropdown',
              dateFrom: '2020, 7, 19',
              dateTo: '2020, 7, 23',
            })

          .form-elements-subscription-text-field-container
            +subscription-text-field({
              title: 'Subscription text field',
            })

          .form-elements-dropdown-second-container
            +element-description({
              title: 'Dropdown',
              status: 'Default',
            })
            +dropdown({
              items: ['Спальни', 'Кровати', 'Ванные комнаты'],
              width: '266px',
              isConveniences: true,
              buttonsNum: [0, 1],
              clicksNum: [2, 2],
            })

          .form-elements-dropdown-third-container
            +element-description({
              title: 'Dropdown',
              status: 'Expanded',
            })
            +dropdown({
              items: ['Спальни', 'Кровати', 'Ванные комнаты'],
              width: '266px',
              isConveniences: true,
              isOpened: true,
              buttonsNum: [0, 1],
              clicksNum: [2, 2],
            })

          each val in checkboxLists
            div(class=val.class)
              +expandable-checkbox-list({
                title: val.title,
                checkboxTexts: val.checkboxTexts,
                checkedItems: val.checkedItems,
                isOpened: val.isOpened,
              })


        .form-elements-central-block
          .form-elements-checkbox-buttons-container
            each val in checkboxes
              +checkbox-button({
                text: val.text,
                title: val.title,
                checked: val.checked,
              })

          .form-elements-radio-buttons-container
            .form-elements-radio-buttons-description-container
              +element-description({
                title: 'Radio buttons',
              })
            +radio-buttons({
              title: 'Radio buttons',
              radioNames: ['Мужчина', 'Женщина'],
              checkedNumber: 0,
            })

          .form-elements-toggle-buttons-container
            .form-elements-toggle-description-container
              +element-description({
                title: 'Toggle',
              })
            .form-elements-toggle-buttons-wrapper
              each val in toggleButtons
                +toggle-button({
                  text: val[0],
                  checked: val[1],
                })

          .form-elements-like-button-container
            +element-description({
              title: 'Like button',
            })
            .form-elements-like-buttons-wrapper
              each val in likeButtons
                +like-button({
                  count: val[0],
                  isLiked: val[1],
                })

          .form-elements-rate-buttons-container
            +element-description({
              title: 'Rate button',
            })
            .form-elemetns-rate-buttons-wrapper
              each val in rateButtons
                +rate-button({
                  starsNumber: val.starsNumber,
                  checkedButton: val.checkedButton,
                  name: val.name,
                })

          .form-elements-dropdown-fourth-container
            +dropdown({
              items: ['Взрослые', 'Дети', 'Младенцы'],
              isOpened: true,
              addingButtons: true,
              isGuests: true,
              title: 'Dropdown',
            })

          .form-elements-rich-checkbox-buttons-container
            each val in richCheckboxButtons
              +checkbox-button({
                title: val.title,
                richButtonTitle: val.richButtonTitle,
                text: val.text,
                isRich: val.isRich,
              })

        .form-elements-right-block
          .form-elements-range-slider-container
            +range-slider({
              title: 'Range slider',
            })

          .form-elements-buttons-container
            .form-elements-buttons-description-container
              +element-description({
                title: 'Buttons',
              })

            each val in buttons
              div(class=val.class)
                each button in val.buttons
                  +button({
                    filledButton: button.filledButton,
                    emptyButton: button.emptyButton,
                    textButton: button.textButton,
                    longButton: button.longButton,
                    size: button.size,
                    text: button.text,
                  })

          .form-elements-pagination-container
            .form-elements-pagination-description-container
              +element-description({
                title: 'Pagination',
              })
            +pagination({
              numbers: '1 - 12',
              totalNumber: 'из 100+ вариантов аренды',
            })

          .form-elements-dropdown-fifth-container
            +dropdown({
              title: 'Dropdown',
              items: ['Взрослые', 'Дети', 'Младенцы'],
              isOpened: true,
              addingButtons: true,
              isGuests: true,
              buttonsNum: [0, 1],
              clicksNum: [2, 1],
            })

          .form-elements-bullet-list-container
            .form-elements-bullet-list-description-container
              +element-description({
                title: 'Bullet list',
              })
            +bullet-list({
              bulletItems: [
                'Нельзя с питомцами',
                'Без вечеринок и мероприятий',
                'Время прибытия — после 13:00, а выезд до 12:00',
                ],
              })

        .form-elements-bottom-block
          .form-elements-advantages-container
            each val in advantages
              +advantage({
                title: val.title,
                description: val.description,
                image: val.image,
                isBorder: val.isBorder,
              })

          .form-elements-comment-container
            +comment({
              image: 'image.jpg',
              date: '5 дней назад',
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
              username: 'Мурад Сарафанов',
              likeCount: 12,
              isLiked: true,
            })