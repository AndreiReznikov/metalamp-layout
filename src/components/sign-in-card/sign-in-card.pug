include ../text-field/text-field
include ../button/button

mixin sign-in-card()
  .sign-in-card
    h1.sign-in-card__title Войти
    .sign-in-card__wrapper
      form.sign-in-card__form
        .sign-in-card__inputs-container
          each inputValues in [['Email', 'email'], ['Пароль', 'password']]
            - const [ placeholder, type ] = inputValues;
            .sign-in-card__input-wrapper
              +text-field({
                placeholder,
                type,
              })
        .sign-in-card__long-button-wrapper
          +button({
            longButton: true,
            text: 'Войти',
            type: 'submit',
          })
        .sign-in-card__registration-wrapper
          .sign-in-card__registration-text Нет аккаунта на Toxin?
          +button({
            emptyButton: true,
            text: 'Создать',
            href: 'registration.html',
            size: 'L',
          })